<!DOCTYPE html>
<html>
  <head>
    <title>Dog Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <nav class="navbar navbar-light" style="background-color: #ffa366;">
  
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><%= image_tag 'dogshop.png', alt: 'Dog Shop Logo' %></a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li><a href="/carts">Carts</a></li>
      <li><a href="/static_pages/help">Help</a></li>
      <li><a href="/static_pages/about">About</a></li>
      <li><%= link_to 'Login', login_path, method: :create %></li>

      <% if session[:user_id] %>
      <li><%= link_to 'Orders', orders_path %></li>
      <li><%= link_to 'Products', products_path %></li>
      <li><%= link_to 'Users', users_path %></li>
      <li><%= link_to 'Logout', logout_path, method: :delete , class:"btn btn-danger" %></li>
      </ul>
      
      <% end %>
    </nav>
    <div>
    <%= yield %>
    
    </div>
  </body>
</html>