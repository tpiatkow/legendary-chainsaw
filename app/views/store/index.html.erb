<h1>Store#index</h1>
<p>Find me in app/views/store/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= (strip_tags(product.description)) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= "$%.2f" %(product.price) %></td>
        <td><%= link_to 'Show', product , class:"btn btn-xs btn-default" %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

