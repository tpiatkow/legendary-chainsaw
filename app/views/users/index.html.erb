<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , class:"btn btn-xs btn-danger" %>
